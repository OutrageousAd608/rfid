#include "spi.h"

// --- Mini ILI9341 Driver ---

// Helper: Sends a command byte (DC pin LOW)
void LCD_WriteCommand(uint8_t cmd) {
    HAL_GPIO_WritePin(LCD_DC_GPIO_Port, LCD_DC_Pin, GPIO_PIN_RESET); // Command Mode
    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_RESET); // Select Screen
    HAL_SPI_Transmit(&hspi1, &cmd, 1, 10);
    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_SET);   // Deselect Screen
}

// Helper: Sends a data byte (DC pin HIGH)
void LCD_WriteData(uint8_t data) {
    HAL_GPIO_WritePin(LCD_DC_GPIO_Port, LCD_DC_Pin, GPIO_PIN_SET);   // Data Mode
    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_RESET); // Select Screen
    HAL_SPI_Transmit(&hspi1, &data, 1, 10);
    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_SET);   // Deselect Screen
}

// Initialization Sequence (From Datasheet/Vendor Script)
void LCD_Init(void) {
    // 1. Hardware Reset
    HAL_GPIO_WritePin(LCD_RST_GPIO_Port, LCD_RST_Pin, GPIO_PIN_RESET);
    HAL_Delay(100);
    HAL_GPIO_WritePin(LCD_RST_GPIO_Port, LCD_RST_Pin, GPIO_PIN_SET);
    HAL_Delay(100);

    // 2. Magic Wake-up Sequence
    LCD_WriteCommand(0x01); // Software Reset
    HAL_Delay(100);

    LCD_WriteCommand(0xCB); LCD_WriteData(0x39); LCD_WriteData(0x2C); LCD_WriteData(0x00); LCD_WriteData(0x34); LCD_WriteData(0x02);
    LCD_WriteCommand(0xCF); LCD_WriteData(0x00); LCD_WriteData(0xC1); LCD_WriteData(0x30);
    LCD_WriteCommand(0xE8); LCD_WriteData(0x85); LCD_WriteData(0x00); LCD_WriteData(0x78);
    LCD_WriteCommand(0xEA); LCD_WriteData(0x00); LCD_WriteData(0x00);
    LCD_WriteCommand(0xED); LCD_WriteData(0x64); LCD_WriteData(0x03); LCD_WriteData(0x12); LCD_WriteData(0x81);
    LCD_WriteCommand(0xF7); LCD_WriteData(0x20);
    LCD_WriteCommand(0xC0); LCD_WriteData(0x23); // Power Control 1
    LCD_WriteCommand(0xC1); LCD_WriteData(0x10); // Power Control 2
    LCD_WriteCommand(0xC5); LCD_WriteData(0x3E); LCD_WriteData(0x28); // VCOM Control
    LCD_WriteCommand(0xC7); LCD_WriteData(0x86); // VCOM Control 2
    LCD_WriteCommand(0x36); LCD_WriteData(0x48); // Orientation (Memory Access Control)
    LCD_WriteCommand(0x3A); LCD_WriteData(0x55); // Pixel Format (16-bit)
    LCD_WriteCommand(0xB1); LCD_WriteData(0x00); LCD_WriteData(0x18);
    LCD_WriteCommand(0xB6); LCD_WriteData(0x08); LCD_WriteData(0x82); LCD_WriteData(0x27);
    LCD_WriteCommand(0x11); // Sleep Out
    HAL_Delay(120);
    LCD_WriteCommand(0x29); // Display On
}

// Fills the entire screen with one solid color
void LCD_FillColor(uint16_t color) {
    // Set drawing window to full screen (0,0 to 239,319)
    LCD_WriteCommand(0x2A);
    LCD_WriteData(0); LCD_WriteData(0); LCD_WriteData(0x00); LCD_WriteData(0xEF);
    LCD_WriteCommand(0x2B);
    LCD_WriteData(0); LCD_WriteData(0); LCD_WriteData(0x01); LCD_WriteData(0x3F);
    LCD_WriteCommand(0x2C); // Start Memory Write

    // Prepare color bytes (High byte, Low byte)
    uint8_t data[] = { (color >> 8), (color & 0xFF) };

    // Burst write mode (Keep CS low for speed)
    HAL_GPIO_WritePin(LCD_DC_GPIO_Port, LCD_DC_Pin, GPIO_PIN_SET);
    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_RESET);

    // 240 * 320 = 76,800 pixels
    for(int i = 0; i < 76800; i++) {
         HAL_SPI_Transmit(&hspi1, data, 2, 10);
    }

    HAL_GPIO_WritePin(LCD_CS_GPIO_Port, LCD_CS_Pin, GPIO_PIN_SET);
}
