#ifndef FONTS_H
#define FONTS_H

#include <stdint.h>

// Font Data Structure
typedef struct {
    uint8_t width;       // Character width in pixels
    uint8_t height;      // Character height in pixels
    const uint16_t *data; // Pointer to the font array
} FontDef;

// Calculate width of a string in pixels
uint16_t LCD_GetStringWidth(const char* str, FontDef* font);

// Main functions
void LCD_WriteChar(char ch, FontDef font, uint16_t color, uint16_t bgcolor);
void LCD_WriteString(const char* str, uint16_t x, uint16_t y, FontDef font, uint16_t color, uint16_t bgcolor);

#endif
