#ifndef TOUCH_H
#define TOUCH_H

#include "main.h"

// --- Calibration Constants (TUNED FOR ILI9341 + XPT2046) ---
// If your touch is slightly off, adjust these numbers later.
#define TOUCH_X_MIN  200
#define TOUCH_X_MAX  3900
#define TOUCH_Y_MIN  200
#define TOUCH_Y_MAX  3800

// --- Button Structure ---
typedef struct {
    uint16_t x;       // Top-left X
    uint16_t y;       // Top-left Y
    uint16_t width;
    uint16_t height;
} ButtonDef;

// --- Functions ---
uint8_t Touch_IsPressed(void);
uint8_t Touch_GetPixels(uint16_t *x, uint16_t *y); // Returns 1 if valid touch
uint8_t Button_IsPressed(ButtonDef button, uint16_t touch_x, uint16_t touch_y);

#endif
